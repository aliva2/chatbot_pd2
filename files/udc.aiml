<?xml version="1.0" encoding="UTF-8"?>
<aiml>
    
<category>
    <pattern> * </pattern>
    <template>
        <think><set name="topic"> clothing yesno </set></think>
        <random>
            <li>Vēlies pirkt drēbes?</li>
            <li>Esmu asistente Sintija, pirksi apģērbu?</li>
            <li>Labdien! Vai gribi pirkt apģērbu?</li>
        </random>
    </template>
</category>

<topic name="clothing yesno">  
<category>
    <pattern> * </pattern>
    <template>
        Piedod, nesapratu ko vēlies! Vai pasūtīsi drēbes?
    </template>
</category>
<category>
    
    <pattern> <set>yesset</set> </pattern>
    <template>
        <think><set name = "topic"> clothes question</set></think>
        Ko vēlies pirkt? Džemperi, bikses, svārkus, kleitu vai ko citu?
    </template>
</category>
<category>
    <pattern> <set>yesset</set> ^ </pattern>
    <template>
        <srai> <star index="2"/></srai>
    </template>
</category>

<category>
    <pattern> <set>noset</set> </pattern>
    <template>
        <set name = "topic"> *</set>
        Visu labu, ja vēlesies kaut ko nopirkt vēlāk, būšu tepat!
    </template>
</category>
<category>
    <pattern> <set>noset</set> ^ </pattern>
    <template>
        <srai> <star index="2"/></srai>
    </template>
</category>

</topic>


<topic name="color question">  
<category>
    <pattern> * </pattern>
    <template>
        Pašlaik šādas krāsas apērbs nav nolikavās. Mūsu veikalā pieejams šādas krāsas apģērbs - melns, balts, sarkans!
    </template>
</category>
<category>
    <pattern> <set>coloroffer</set> ^ </pattern>
    <template>
        Var izvēlēties kādu no šīm krāsām - melns, balts, sarkans!
    </template>
</category>
<category>
    <pattern> <set>colorset</set> ^ </pattern>
    <template>
        <think><set name="color"> black </set></think> 
        <srai> VALIDATE </srai>
    </template>
</category>
<category>
    <pattern>^ <set>colorset</set> ^ </pattern>
    <template>
        <think><set name="color"> white </set></think> 
        <srai> VALIDATE </srai>
    </template>
</category>
<category>
    <pattern>^ <set>colorset</set> ^ </pattern>
    <template>
        <think><set name="color"> red </set></think> 
        <srai> VALIDATE </srai>
    </template>
</category>
<category>
    <pattern>^ <set>colorset</set> ^</pattern>
    <template>
        <think><set name="color"> red </set></think> 
        <srai> VALIDATE </srai>
    </template>
</category>
<category>
    <pattern> VALIDATE </pattern>
    <template>
        <think><set name="topic"> color validation </set></think> 
        Tu vēlies pirkt <get name="color"/> apģērbu. Vai tā ir pareizi?
    </template>
</category>
</topic>

<topic name="clothes validation">
<category>
    <pattern> * </pattern>
    <template>
        Piedod, vai tu izvēlējies pirkt <get name="color"/> apģērbu?
    </template>
</category>
<category>
    <pattern> <set>rightset</set> </pattern>
    <template>
        <think> <set name="topic"> clothes size question </set>
        <set name= "size"> nebūs </set></think>
        Ļoti labi, vai vēlies izvēlēties izmēru?
    </template>
</category>
</topic>



<topic name="FINAL">
<category>
    <pattern> Summary </pattern>
    <template>
        <think><set name="color"> red </set></think> 
        <srai> VALIDATE!</srai>
    </template>
</category>
</topic>


</aiml>
